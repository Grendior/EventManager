@model Event

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2>Edit Event</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <div class="form-group">
                <label class="col-form-label mt-4" for="Title">Title</label>
                <input asp-for="Title" type="text" disabled class="form-control" placeholder="Title" id="Title">
            </div>
            <div class="pt-4 text-end">
                <button type="submit" class="btn btn-primary">Delete</button>
                <a asp-controller="Event" asp-action="Index" class="btn btn-secondary">Back to the list</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}