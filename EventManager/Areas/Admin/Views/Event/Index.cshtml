@model List<Event>

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Event list</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Event" asp-action="Upsert" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Add Event</a>
        </div>
    </div>
</div>

<table class="table table-bordered table-striped table-primary">
    <thead>
        <tr>
            <th>Title</th>
            <th>Time</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Title</td>
                <td>@item.Date.ToString("g")</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Event" asp-action="Upsert" asp-route-id="@item.Id" class="btn btn-secondary mx-2"><i class="bi bi-pencil-square"></i> Edit</a>
                        <a asp-controller="Event" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i> Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>