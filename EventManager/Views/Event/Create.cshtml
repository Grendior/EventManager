@model Event

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2>Create Event</h2>
            <hr />
        </div>
        <div class="mb-3 row">
            <div class="form-group">
                <label class="col-form-label mt-4" for="inputDefault">Title</label>
                <input asp-for="Title" type="text" class="form-control" placeholder="Title" id="inputDefault">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="pt-4 text-end">
                <button type="submit" class="btn btn-primary">Create</button>
                <a asp-controller="Event" asp-action="Index" class="btn btn-secondary">Back to the list</a>
            </div>
        </div>
    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}